{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "alwaysStrict": true,
    "lib": [
      "ES6",
      "DOM",
      "es2017.object"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": []
  },
  "include": ["src/**/*"]
}
